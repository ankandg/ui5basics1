<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="aiui5.controller.View1">
    <Page id="worklistPage" title="Sales Orders">
        <content>
            <Table id="salesOrdersTable" items="{/SalesOrders}" noDataText="No sales orders found">
                <columns>
                    <Column>
                        <Text text="Sales Order ID" />
                    </Column>
                    <Column>
                        <Text text="Customer" />
                    </Column>
                    <Column>
                        <Text text="Status" />
                    </Column>
                    <Column>
                        <Text text="Total Amount" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem type="Active" press="onItemPress">
                        <cells>
                            <Text text="{SalesOrderID}" />
                            <Text text="{CustomerID}" />
                            <Text text="{Status}" />
                            <Text text="{TotalAmount}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>
